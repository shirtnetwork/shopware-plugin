{% sw_extends '@Storefront/storefront/page/account/order-history/order-detail-list-item.html.twig' %}

{% block page_account_order_item_detail_image_value %}
    {% if lineItem.payload.shirtnetwork %}
        <div class="order-item-product-image">
            <a href="{{ designer_config_link(lineItem.payload.shirtnetwork) }}"
               class="product-image-link"
               title="{{ lineItem.label }}">
                {% block page_checkout_item_info_image_element %}
                    <img class="img-fluid cart-item-img" alt="{{ (lineItem.cover.translated.alt ?: '') }}" title="{{ (lineItem.cover.translated.title ?: '') }}" src="{{ lineItem.payload.shirtnetworkconfig.views.0.icon }}" />
                {% endblock %}
            </a>
        </div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block page_account_order_item_detail_name_value %}
    {% if lineItem.payload.shirtnetwork %}
        <a href="{{ designer_config_link(lineItem.payload.shirtnetwork) }}"
           class="order-item-product-name"
           title="{{ lineItem.label }}"> <strong class="name-value">
                {{ lineItem.label }}
            </strong> </a>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}


{% block page_account_order_item_detail_variants %}
    {{ parent() }}
    {% if lineItem.payload.shirtnetwork %}
    <br/>
    <button class="btn btn-secondary btn-sm"
            type="button"
            data-toggle="modal"
            data-url="{{ seoUrl('frontend.shirtnetwork.config', {config: lineItem.payload.shirtnetwork}) }}">
        Gestaltungs Details
    </button>
    {% endif %}
{% endblock %}