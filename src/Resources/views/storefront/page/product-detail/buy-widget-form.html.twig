{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget-form.html.twig' %}

{% block page_product_detail_buy_container %}
    {{ parent() }}
    {% if product.available and product.translated.customFields.is_shirtnetwork %}
        <div class="form-row shirtnetwork-buy-widget-container mt-3">
            <div class="col-8 offset-4">
                {% block page_product_detail_shirtnetwork_button %}
                    <a class="btn btn-info btn-block btn-shirtnetwork"
                       href="{{ designer_link(product) }}"
                       title="{{ "shirtnetwork.detail.configureProduct"|trans|striptags }}"
                            aria-label="{{ "shirtnetwork.detail.configureProduct"|trans|striptags }}">
                        {{ "shirtnetwork.detail.configureProduct"|trans|sw_sanitize }}
                    </a>
                {% endblock %}
            </div>
        </div>
    {% endif %}
{% endblock %}
